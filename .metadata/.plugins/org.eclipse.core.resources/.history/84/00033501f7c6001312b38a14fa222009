<mapper namespace="jxau.sms.lyx.role.dao">

	<select id="findAllRoleInfoNums" resultType="java.lang.Long">
		select count(*) from role_info where 1=1;
	</select>

	<select id="findAllTeacherRoleInfo" resultMap="VTeacherRoleList">
		select roleNo,roleName,createTime,roleDescription from role_info
		where 1=1
		limit #{start},#{nums}
	</select>
		
		 <resultMap type="VTeacherRole" id="VTeacherRoleList">
		        <id column="teacherNo" property="teacherNo" />
		        <result column="teacherName" property="teacherName" />
		        <result column="sex" property="sex" />
		        <result column="political" property="political" />
		        <result column="teacherTitle" property="teacherTitle" />
		        <result column="worktime" property="worktime" />
		        <collection property="" ofType="RoleInfo">
		        	<id property="studentNo" column="studentNo" />
			<result column="studentName" property="studentName" />
			<result column="sex" property="sex" />
		        </collection>
  		 </resultMap>
 
</mapper>