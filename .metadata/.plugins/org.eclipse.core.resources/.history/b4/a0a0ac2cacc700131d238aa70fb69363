		  	</if>
		  	<if test="advLevel != null">
		  		advLevel = #{advLevel},
		  	</if>
		  	<if test="advTime != null">
		  		advTime = #{advTime},
		  	</if>
		  	 <if test="examState != null">
	        	examState=#{examState},
	       </if>
		  	<if test="remarks != null">
		  		remarks = #{remarks},
		  	</if>
		</set>
		where awardNo = #{awardNo};
    </update>
